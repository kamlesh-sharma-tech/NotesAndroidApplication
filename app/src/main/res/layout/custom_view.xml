<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutBorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="8dp"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/note" />

            <TextView
                android:id="@+id/number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/ubuntu"
                android:text="1"
                android:textColor="#9DA0A0"
                android:textSize="28dp"
                android:transitionName="id_trans" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#393838"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fkskkamlesh"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:transitionName="title_trans"
                android:maxLines="5"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/note_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="15"
                android:ellipsize="end"
                android:text="fkskkamlesh"
                android:textColor="#E8E6E6"
                android:textSize="18dp"
                android:layout_marginTop="4dp"
                android:transitionName="desc_trans"/>

<!--            <TextView-->
<!--                android:id="@+id/textDateTime"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="kamlesh"-->
<!--                android:textColor="#464343"-->
<!--                android:textSize="15sp"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginTop="12dp"/>-->

        </LinearLayout>

    </LinearLayout>
